<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/diceFragment">

    <fragment
        android:id="@+id/diceFragment"
        android:name="eu.tutorials.dicegame.DiceFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dice">
        <action
            android:id="@+id/action_diceFragment_to_resultsFragment"
            app:destination="@id/resultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultsFragment"
        android:name="eu.tutorials.dicegame.ResultsFragment"
        android:label="Results"
        tools:layout="@layout/fragment_results" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="eu.tutorials.dicegame.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>